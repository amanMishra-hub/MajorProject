<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- Title and Location -->
            <h1 class="mb-2 fw-bold"><%= listing.title %></h1>
            <p class="text-muted mb-3">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= listing.location %>, <%= listing.country %>
            </p>
            
            <!-- Main Image -->
            <div class="mb-4 position-relative">
                <img src="<%= listing.image.url %>" 
                     class="img-fluid rounded-3 w-100" 
                     alt="<%= listing.title %>" 
                     style="height: 400px; object-fit: cover;">
                <div class="position-absolute top-0 end-0 m-3">
                    <button class="btn btn-light rounded-circle p-2" title="Save to wishlist">
                        <i class="far fa-heart"></i>
                    </button>
                </div>
            </div>
            
            <!-- Description Section -->
            <div class="mb-4">
                <h3 class="mb-3">About this place</h3>
                <p class="text-muted lh-lg"><%= listing.description %></p>
            </div>
        </div>
        
        <!-- Booking Card -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg sticky-top" style="top: 100px;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <h2 class="mb-0 fw-bold">₹<%= listing.price.toLocaleString("en-in") %></h2>
                        <span class="text-muted ms-2">night</span>
                    </div>
                    
                    <div class="border rounded-3 mb-3">
                        <div class="row g-0">
                            <div class="col-6">
                                <div class="p-3 border-end">
                                    <label class="form-label small text-uppercase fw-bold">Check-in</label>
                                    <input type="date" class="form-control border-0 p-0">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-3">
                                    <label class="form-label small text-uppercase fw-bold">Check-out</label>
                                    <input type="date" class="form-control border-0 p-0">
                                </div>
                            </div>
                        </div>
                        <div class="border-top p-3">
                            <label class="form-label small text-uppercase fw-bold">Guests</label>
                            <select class="form-select border-0 p-0">
                                <option>1 guest</option>
                                <option>2 guests</option>
                                <option>3 guests</option>
                                <option>4+ guests</option>
                            </select>
                        </div>
                    </div>
                    
                    <button class="btn add-btn w-100 py-3 mb-3 fw-semibold">Reserve</button>
                    
                    <p class="text-center text-muted small mb-3">You won't be charged yet</p>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>₹<%= listing.price.toLocaleString("en-in") %> x 5 nights</span>
                        <span>₹<%= (listing.price * 5).toLocaleString("en-in") %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Cleaning fee</span>
                        <span>₹<%= Math.round(listing.price * 0.1).toLocaleString("en-in") %></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Service fee</span>
                        <span>₹<%= Math.round(listing.price * 0.15).toLocaleString("en-in") %></span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Total</span>
                        <span>₹<%= Math.round(listing.price * 5 + listing.price * 0.1 + listing.price * 0.15).toLocaleString("en-in") %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Reviews Section -->
    <div class="row mt-5">
        <div class="col-lg-8">
            <div class="border-top pt-5">
                <% if (listing.reviews && listing.reviews.length > 0) { %>
                    <% 
                        let totalRating = 0;
                        for (let review of listing.reviews) {
                            totalRating += review.rating;
                        }
                        let avgRating = (totalRating / listing.reviews.length).toFixed(1);
                    %>
                    <div class="d-flex align-items-center mb-4">
                        <i class="fas fa-star text-warning me-2"></i>
                        <h3 class="mb-0 fw-bold"><%= avgRating %> · <%= listing.reviews.length %> <%= listing.reviews.length === 1 ? 'review' : 'reviews' %></h3>
                    </div>
                <% } else { %>
                    <div class="d-flex align-items-center mb-4">
                        <i class="fas fa-star text-muted me-2"></i>
                        <h3 class="mb-0 fw-bold">No reviews yet</h3>
                    </div>
                <% } %>
                
                <!-- Review Stats -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <span class="small fw-semibold" style="width: 80px;">Cleanliness</span>
                            <div class="progress flex-grow-1 mx-3" style="height: 4px;">
                                <div class="progress-bar bg-dark" style="width: 96%"></div>
                            </div>
                            <span class="small fw-bold">4.8</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="small fw-semibold" style="width: 80px;">Accuracy</span>
                            <div class="progress flex-grow-1 mx-3" style="height: 4px;">
                                <div class="progress-bar bg-dark" style="width: 94%"></div>
                            </div>
                            <span class="small fw-bold">4.7</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="small fw-semibold" style="width: 80px;">Check-in</span>
                            <div class="progress flex-grow-1 mx-3" style="height: 4px;">
                                <div class="progress-bar bg-dark" style="width: 100%"></div>
                            </div>
                            <span class="small fw-bold">5.0</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-2">
                            <span class="small fw-semibold" style="width: 90px;">Communication</span>
                            <div class="progress flex-grow-1 mx-3" style="height: 4px;">
                                <div class="progress-bar bg-dark" style="width: 92%"></div>
                            </div>
                            <span class="small fw-bold">4.6</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="small fw-semibold" style="width: 80px;">Location</span>
                            <div class="progress flex-grow-1 mx-3" style="height: 4px;">
                                <div class="progress-bar bg-dark" style="width: 98%"></div>
                            </div>
                            <span class="small fw-bold">4.9</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="small fw-semibold" style="width: 80px;">Value</span>
                            <div class="progress flex-grow-1 mx-3" style="height: 4px;">
                                <div class="progress-bar bg-dark" style="width: 90%"></div>
                            </div>
                            <span class="small fw-bold">4.5</span>
                        </div>
                    </div>
                </div>
                
                <!-- Individual Reviews -->
                <div class="row" id="reviewsContainer">
                    <% if (listing.reviews && listing.reviews.length > 0) { %>
                        <% for (let i = 0; i < listing.reviews.length; i++) { %>
                            <% let review = listing.reviews[i]; %>
                            <div class="col-md-6 mb-4 review-item <%= i >= 6 ? 'hidden-review d-none' : '' %>">
                                <div class="d-flex mb-3">
                                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <span class="text-white fw-bold"><%= review.author.charAt(0).toUpperCase() %></span>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-semibold"><%= review.author %></h6>
                                        <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %></small>
                                    </div>
                                </div>
                                <div class="mb-2">
                                    <% for (let j = 1; j <= 5; j++) { %>
                                        <% if (j <= review.rating) { %>
                                            <i class="fas fa-star text-warning"></i>
                                        <% } else { %>
                                            <i class="far fa-star text-muted"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                                <p class="text-muted small lh-base"><%= review.comment %></p>
                                <% if (currUser && review.owner && currUser._id.equals(review.owner)) { %>
                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this review?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="col-12 text-center py-5">
                            <p class="text-muted">No reviews yet. Be the first to leave a review!</p>
                        </div>
                    <% } %>
                </div>
                
                <!-- Show More Reviews Button -->
                <% if (listing.reviews && listing.reviews.length > 6) { %>
                    <div class="text-center mt-4">
                        <button class="btn btn-outline-dark px-4 py-2" onclick="showAllReviews()">
                            Show all <%= listing.reviews.length %> reviews
                        </button>
                    </div>
                <% } %>
                
                <!-- Leave a Review Form -->
                <% if (currUser) { %>
                    <div class="border-top pt-5 mt-5">
                        <h4 class="mb-4">Leave a review</h4>
                        <form action="/listings/<%= listing._id %>/reviews" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Your Name</label>
                                    <input type="text" name="review[author]" class="form-control" placeholder="Enter your name" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">Rating</label>
                                    <div class="star-rating" id="starRating">
                                        <span class="star" data-rating="1">★</span>
                                        <span class="star" data-rating="2">★</span>
                                        <span class="star" data-rating="3">★</span>
                                        <span class="star" data-rating="4">★</span>
                                        <span class="star" data-rating="5">★</span>
                                        <input type="hidden" name="review[rating]" id="ratingInput" value="0" required>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="reviewText" class="form-label fw-semibold">Your Review</label>
                                <textarea class="form-control" name="review[comment]" rows="4" placeholder="Share your experience..." required></textarea>
                            </div>
                            <button type="submit" class="btn add-btn px-4 py-2">Submit Review</button>
                        </form>
                    </div>
                <% } else { %>
                    <div class="border-top pt-5 mt-5 text-center">
                        <h4 class="mb-3">Want to leave a review?</h4>
                        <p class="text-muted mb-4">Please log in to share your experience</p>
                        <a href="/login" class="btn add-btn px-4 py-2">Log In to Review</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Map Section -->
    <div class="row mt-5">
        <div class="col-lg-8">
            <div class="border-top pt-5">
                <h4 class="mb-3">Where you'll be</h4>
                <div id="map" class="airbnb-map" 
                     data-coordinates='<%= listing.geometry ? JSON.stringify(listing.geometry.coordinates) : "[77.2090, 28.6139]" %>'
                     data-title="<%= listing.title %>"
                     data-location="<%= listing.location %>, <%= listing.country %>"></div>
                <p class="text-muted mt-3">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <%= listing.location %>, <%= listing.country %>
                </p>
            </div>
        </div>
    </div>
    
    <!-- Action Buttons -->
    <% if (currUser && listing.owner && currUser._id.equals(listing.owner)) { %>
        <div class="row mt-5">
            <div class="col-12">
                <div class="d-flex gap-3 justify-content-center">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark px-4 py-2">
                        <i class="fas fa-edit me-2"></i>Edit Listing
                    </a>
                    <a href="/listings" class="btn btn-outline-secondary px-4 py-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Listings
                    </a>
                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger px-4 py-2" 
                                onclick="return confirm('Are you sure you want to delete this listing?')">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row mt-5">
            <div class="col-12 text-center">
                <a href="/listings" class="btn btn-outline-secondary px-4 py-2">
                    <i class="fas fa-arrow-left me-2"></i>Back to Listings
                </a>
            </div>
        </div>
    <% } %>
</div>

<script>
// Show all reviews functionality
function showAllReviews() {
    document.querySelectorAll('.hidden-review').forEach(review => {
        review.classList.remove('d-none');
    });
    document.querySelector('.btn-outline-dark').style.display = 'none';
}

// Star rating functionality
document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.star-rating .star');
    const ratingInput = document.getElementById('ratingInput');
    
    if (stars.length > 0) {
        stars.forEach((star, index) => {
            star.addEventListener('click', function() {
                const rating = parseInt(this.getAttribute('data-rating'));
                ratingInput.value = rating;
                
                // Update star display
                stars.forEach((s, i) => {
                    if (i < rating) {
                        s.classList.add('active');
                    } else {
                        s.classList.remove('active');
                    }
                });
            });
            
            star.addEventListener('mouseenter', function() {
                const rating = parseInt(this.getAttribute('data-rating'));
                stars.forEach((s, i) => {
                    if (i < rating) {
                        s.style.color = '#ffc107';
                    } else {
                        s.style.color = '#ddd';
                    }
                });
            });
        });
        
        // Reset hover effect when leaving star container
        document.querySelector('.star-rating').addEventListener('mouseleave', function() {
            const currentRating = parseInt(ratingInput.value);
            stars.forEach((s, i) => {
                if (i < currentRating) {
                    s.style.color = '#ffc107';
                } else {
                    s.style.color = '#ddd';
                }
            });
        });
    }

    // Form validation
    const reviewForm = document.querySelector('form[action*="/reviews"]:not([action*="DELETE"])');
    if (reviewForm) {
        reviewForm.addEventListener('submit', function(e) {
            const rating = parseInt(ratingInput.value);
            
            if (!rating || rating === 0) {
                e.preventDefault();
                alert('Please select a rating before submitting your review.');
                return false;
            }
        });
    }
});
</script>

<script src="/js/map.js"></script>