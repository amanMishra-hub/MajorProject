<% layout('/layout/boilerplate') -%>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3 class="mb text-center">Edit Listing</h3>

      <form
        action="/listings/<%= listing._id %>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="title" class="form-label">Title</label>
          <input
            id="title"
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            class="form-control"
            rows="4"
            required
          >
<%= listing.description %></textarea
          >
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-4">
          <label for="image" class="form-label">Image file</label>
          
          <!-- Current Image Preview -->
          <div class="mb-3">
            <label class="form-label">Current Image:</label>
            <div>
              <img id="currentImage" src="<%= listing.image.url %>" alt="Current listing image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
            </div>
          </div>
          
          <input
            id="image"
            name="listing[image]"
            type="file"
            class="form-control"
            accept="image/*"
            onchange="previewImage(event)"
          />
          
          <!-- New Image Preview -->
          <div id="newImagePreview" class="mt-3" style="display: none;">
            <label class="form-label">New Image Preview:</label>
            <div>
              <img id="newImage" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col-md-6">
            <label for="price" class="form-label">Price</label>
            <input
              id="price"
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter an valid price</div>
          </div>
          <div class="col-md-6">
            <label for="country" class="form-label">Country</label>
            <input
              id="country"
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please enter an valid country name
            </div>
          </div>
        </div>

        <div class="mb-5">
          <label for="location" class="form-label">Location</label>
          <input
            id="location"
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter an valid location</div>
        </div>

        <div class="d-flex gap-2">
          <button type="submit" class="btn add-btn">Update Listing</button>
          <a href="/listings/<%= listing._id %>" class="btn btn-secondary"
            >Cancel</a
          >
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function previewImage(event) {
  const file = event.target.files[0];
  const preview = document.getElementById('newImage');
  const previewContainer = document.getElementById('newImagePreview');
  
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      preview.src = e.target.result;
      previewContainer.style.display = 'block';
    };
    reader.readAsDataURL(file);
  } else {
    previewContainer.style.display = 'none';
  }
}
</script>
